<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MRBilling" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="InputTextAppearance">
        <item name="android:textSize">@dimen/_14ssp</item>

    </style>
    <style name="cornerRounded_TextInputLayout" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_16sdp</item>
    </style>
    <style name="HintTextAppearance">
        <item name="android:textSize">@dimen/_12ssp</item>

    </style>



        <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:textColorHint">@color/grey_400</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>

        <item name="boxStrokeErrorColor">@color/error_color</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/error_color</item>
        <item name="errorTextAppearance">@style/HintTextAppearance</item>

        <item name="helperTextTextColor">@color/grey_400</item>
        <item name="helperTextTextAppearance">@style/HintTextAppearance</item>
    </style>
</resources>